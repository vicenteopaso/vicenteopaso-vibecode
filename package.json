{
  "name": "vicenteopaso-vibecode",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "SENTRY_DSN= SENTRY_AUTH_TOKEN= NEXT_TELEMETRY_DISABLED=1 vitest --run",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test test/e2e",
    "test:e2e:ui": "playwright test test/e2e --ui",
    "test:visual": "playwright test test/visual",
    "test:visual:update": "playwright test test/visual --update-snapshots",
    "coverage": "mkdir -p coverage/unit/.tmp && SENTRY_DSN= SENTRY_AUTH_TOKEN= NEXT_TELEMETRY_DISABLED=1 vitest run --coverage",
    "content": "node scripts/contentlayer-build.mjs",
    "clean": "node scripts/clean-local.mjs",
    "reset": "pnpm clean && pnpm install && pnpm build",
    "verify": "pnpm install && pnpm lint && pnpm format && pnpm typecheck && pnpm validate:links && pnpm test && pnpm test:e2e && pnpm build && pnpm coverage && pnpm sitemap",
    "verify:fix": "pnpm install && pnpm lint:fix && pnpm format:fix && pnpm typecheck && pnpm validate:links && pnpm test && pnpm test:e2e && pnpm build && pnpm coverage && pnpm sitemap",
    "validate:links": "node scripts/validate-links.mjs",
    "audit:a11y": "node scripts/audit-a11y.mjs",
    "audit:lighthouse": "node scripts/audit-lighthouse.mjs",
    "audit:security": "pnpm audit --audit-level=high",
    "sitemap": "next-sitemap --config next-sitemap.config.js",
    "vercel:should-skip": "bash scripts/vercel-ignore-build.sh",
    "test:vercel-skip": "bash scripts/test-vercel-ignore-build.sh",
    "translate": "node scripts/translate.mjs"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@sentry/nextjs": "^10.29.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/og": "^0.8.5",
    "@vercel/speed-insights": "^1.3.1",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "contentlayer": "^0.3.4",
    "deepl-node": "^1.22.0",
    "gray-matter": "^4.0.3",
    "next": "^16.0.10",
    "next-contentlayer": "^0.3.4",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "sanitize-html": "^2.13.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.15.1",
    "@next/eslint-plugin-next": "^16.0.8",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/context-async-hooks": "^2.2.0",
    "@opentelemetry/core": "^2.2.0",
    "@opentelemetry/instrumentation": "^0.208.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.6",
    "import-in-the-middle": "^2.0.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.47",
    "prettier": "^3.7.4",
    "require-in-the-middle": "^8.0.1",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-radix": "^4.0.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{md,mdx,json,css}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "estree-util-value-to-estree@<3.3.3": ">=3.3.3",
      "cookie@<0.7.0": ">=0.7.0",
      "tmp@<=0.2.3": ">=0.2.4"
    },
    "packageExtensions": {
      "next-contentlayer@*": {
        "peerDependencies": {
          "next": "^16.0.0"
        }
      },
      "@opentelemetry/core@1.13.0": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/resources@1.13.0": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/sdk-trace-base@1.13.0": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/otlp-transformer@0.39.1": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/sdk-logs@0.39.1": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/sdk-metrics@1.13.0": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      }
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@opentelemetry/api": ">=1.0.0 <2.0.0",
        "next": "^16.0.0"
      },
      "ignoreMissing": [
        "@opentelemetry/api@>1.5.0",
        "next@>13"
      ]
    }
  }
}
