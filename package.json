{
  "name": "vicenteopaso-vibecode",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "validate:links": "node scripts/validate-links.mjs",
    "audit:a11y": "node scripts/audit-a11y.mjs",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "coverage": "mkdir -p coverage/unit/.tmp && vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "content": "node scripts/contentlayer-build.mjs",
    "clean:local": "node scripts/clean-local.mjs",
    "full:local": "pnpm clean:local && pnpm install && pnpm build && pnpm lint:fix && pnpm format:fix && pnpm validate:links && pnpm test && pnpm test:e2e && pnpm typecheck && pnpm coverage && pnpm audit:a11y",
    "partial:local": "pnpm build && pnpm lint:fix && pnpm format:fix && pnpm validate:links && pnpm test && pnpm test:e2e && pnpm typecheck && pnpm coverage && pnpm audit:a11y"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/og": "^0.6.5",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "contentlayer": "^0.3.4",
    "gray-matter": "^4.0.3",
    "next": "^15.0.0",
    "next-contentlayer": "^0.3.4",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.3.0",
    "plausible-tracker": "^0.3.9",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^4.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "husky": "^9.1.6",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-radix": "^4.0.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{md,mdx,json,css}": [
      "prettier --write"
    ]
  }
}
