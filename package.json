{
  "name": "vicenteopaso-vibecode",
  "version": "1.0.1",
  "private": true,
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "SENTRY_DSN= SENTRY_AUTH_TOKEN= NEXT_TELEMETRY_DISABLED=1 vitest --run",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test test/e2e",
    "test:e2e:ui": "playwright test test/e2e --ui",
    "test:visual": "playwright test test/visual",
    "test:visual:update": "playwright test test/visual --update-snapshots",
    "coverage": "mkdir -p coverage/unit/.tmp && SENTRY_DSN= SENTRY_AUTH_TOKEN= NEXT_TELEMETRY_DISABLED=1 vitest run --coverage",
    "content": "node scripts/contentlayer-build.mjs",
    "clean": "node scripts/clean-local.mjs",
    "reset": "pnpm clean && pnpm install && pnpm build",
    "verify": "pnpm install && pnpm lint && pnpm format && pnpm typecheck && pnpm audit:secrets && pnpm validate:links && pnpm test && pnpm test:e2e && pnpm build && pnpm coverage && pnpm sitemap",
    "verify:fix": "pnpm install && pnpm lint:fix && pnpm format:fix && pnpm typecheck && pnpm audit:secrets && pnpm validate:links && pnpm test && pnpm test:e2e && pnpm build && pnpm coverage && pnpm sitemap",
    "validate:links": "node scripts/validate-links.mjs",
    "audit:a11y": "node scripts/audit-a11y.mjs",
    "audit:lighthouse": "node scripts/audit-lighthouse.mjs",
    "audit:security": "pnpm audit --audit-level=high",
    "audit:security:fix": "pnpm audit --fix --audit-level=high",
    "audit:secrets": "node scripts/scan-secrets.mjs",
    "sitemap": "next-sitemap --config next-sitemap.config.js",
    "vercel:should-skip": "bash scripts/vercel-ignore-build.sh",
    "test:vercel-skip": "bash scripts/test-vercel-ignore-build.sh",
    "translate": "node scripts/translate.mjs"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@sentry/nextjs": "^10.36.0",
    "@vercel/analytics": "^1.6.1",
    "@vercel/og": "^0.8.6",
    "@vercel/speed-insights": "^1.3.1",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "contentlayer": "^0.3.4",
    "deepl-node": "^1.24.0",
    "gray-matter": "^4.0.3",
    "next": "^16.1.4",
    "next-contentlayer": "^0.3.4",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "sanitize-html": "^2.17.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@next/eslint-plugin-next": "^16.1.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/context-async-hooks": "^2.5.0",
    "@opentelemetry/core": "^2.5.0",
    "@opentelemetry/instrumentation": "^0.211.0",
    "@opentelemetry/sdk-trace-base": "^2.5.0",
    "@playwright/test": "^1.58.0",
    "@sentry/cli-darwin": "^3.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "import-in-the-middle": "^2.0.5",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "require-in-the-middle": "^8.0.1",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-radix": "^4.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{md,mdx,json,css}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "estree-util-value-to-estree@<3.3.3": ">=3.3.3",
      "cookie@<0.7.0": ">=0.7.0",
      "tmp@<=0.2.3": ">=0.2.4",
      "qs@<6.14.1": ">=6.14.1",
      "diff@<8.0.3": ">=8.0.3",
      "glob@<8.0.0": ">=11.0.0",
      "rimraf@<4.0.0": ">=6.0.0",
      "node-domexception@<2.0.0": ">=2.0.0"
    },
    "allowedDeprecatedVersions": {
      "node-domexception": "*"
    },
    "packageExtensions": {
      "next-contentlayer@*": {
        "peerDependencies": {
          "next": "^16.0.0"
        }
      },
      "@opentelemetry/core@1.13.0": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/resources@1.13.0": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/sdk-trace-base@1.13.0": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/otlp-transformer@0.39.1": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/sdk-logs@0.39.1": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      },
      "@opentelemetry/sdk-metrics@1.13.0": {
        "peerDependencies": {
          "@opentelemetry/api": ">=1.0.0 <2.0.0"
        }
      }
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@opentelemetry/api": ">=1.0.0 <2.0.0",
        "next": "^16.0.0"
      },
      "ignoreMissing": [
        "@opentelemetry/api@>1.5.0",
        "next@>13"
      ]
    }
  }
}
