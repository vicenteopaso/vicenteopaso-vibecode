# Example development env vars

# --- Contact / spam protection ---
# Public Cloudflare Turnstile site key used by the client (ContactDialog.tsx)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
# Secret Turnstile key used server-side in the contact API route
TURNSTILE_SECRET_KEY=
# Formspree form ID used to build the contact endpoint
NEXT_PUBLIC_FORMSPREE_KEY=

# --- Sentry error tracking ---
# Secret DSN for Sentry (server + edge SDK)
SENTRY_DSN=
# Public Sentry DSN for browser SDK
NEXT_PUBLIC_SENTRY_DSN=
# Environment label shown in Sentry (e.g. development | preview | production)
SENTRY_ENVIRONMENT=development

# --- Cache-busting versions (bump when you update assets) ---
NEXT_PUBLIC_PDF_CACHE_DATE=
NEXT_PUBLIC_OG_CACHE_DATE=
NEXT_PUBLIC_ICONS_CACHE_DATE=
NEXT_PUBLIC_IMAGES_CACHE_DATE=
